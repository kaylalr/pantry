<body id="page-top">

  <% include ./common/nav.ejs%>

  <!-- Add Food -->
  <section class="addFood padding-top" id="addFood">
    <div class="container">
      <h2 class="text-center text-uppercase text-secondary mb-0">Add Food</h2>
      <hr class="star-dark mb-5">
      <form id="addFoodForm" action="/addFood" method="post">
        <div class="form-group">
          <label for="food_name">Food Name</label>
          <input type="text" class="form-control" id="food_name" name="food_name" placeholder="food name">
        </div>
        <div class="form-group">
          <label for="quantity_type_id">Food Type</label>
          <select class="form-control" name="food_type">
              <% food_groups.forEach(function(type) { %>
                <option value="<%= type.foodgroup_id%>"><%= type.foodgroup_name%></option> 
              <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="quantity_num">Quantity</label>
          <input type="number" class="form-control" id="quantity_num" name="quantity_num" placeholder="quantity">
        </div>
        <div class="form-group">
          <label for="quantity_type_id">Quantity Type</label>
          <select class="form-control" name="quantity_type">
              <% quantity_types.forEach(function(type) { %>
                <option value="<%= type.quantity_type_id%>"><%= type.quantity_type_name%></option> 
              <% }) %>
          </select>
          
        </div>
        <div class="form-group">
          <label for="expiration">Expiration Date</label>
          <input type="date" class="form-control" id="expiration" name="expiration">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" class="form-control" id="description" name="description" placeholder="description">
        </div>
        <button type="submit" class="btn btn-primary">Add Food</button>
      </form>
    </div>
  </section>

  <% include ./common/footer.ejs%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
  <script src="vendor/magnific-popup/jquery.magnific-popup.min.js"></script>

  <!-- Contact Form JavaScript -->
  <script src="js/jqBootstrapValidation.js"></script>
  <script src="js/contact_me.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/freelancer.min.js"></script>

</body>

</html>
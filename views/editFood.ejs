  <!-- Add Food -->
  <section class="addFood padding-top" id="addFood">
    <div class="container">
      <h2 class="text-center text-uppercase text-secondary mb-0">Edit Food</h2>
      <hr class="star-dark mb-5">
      <form id="addFoodForm" action="/editFood/<%= food.food_id%>" method="post">
        <div class="form-group">
          <label for="food_name">Food Name</label>
          <input type="text" class="form-control" id="food_name" name="food_name" value="<%= food.food_name %>">
        </div>
        <div class="form-group">
          <label for="quantity_type_id">Food Type</label>
          <select class="form-control" name="food_type">
              <% food_groups.forEach(function(type) { %>
                <% if (food.foodgroup_name == type.foodgroup_name) {%>
                  <option value="<%= type.foodgroup_id%>" selected><%= type.foodgroup_name%></option> 
                <% } else { %>
                <option value="<%= type.foodgroup_id%>"><%= type.foodgroup_name%></option> 
              <% }}) %>
          </select>
        </div>
        <div class="form-group">
          <label for="quantity_num">Quantity</label>
          <input type="number" class="form-control" id="quantity_num" name="quantity_num" value="<%= food.quantity_num %>">
        </div>
        <div class="form-group">
          <label for="quantity_type_id">Quantity Type</label>
          <select class="form-control" name="quantity_type">
              <% quantity_types.forEach(function(type) { %>
              <% if (food.quantity_type_id == type.quantity_type_id) {%>
                <option value="<%= type.quantity_type_id%>" selected><%= type.quantity_type_name%></option> 
              <% } else { %>
                <option value="<%= type.quantity_type_id%>"><%= type.quantity_type_name%></option> 
              <% }}) %>
          </select>
          
        </div>
        <div class="form-group">
          <label for="expiration">Expiration Date</label>
          <!-- NEED TO SET THE VALUE OF THE EXPIRATION DATE -->
          <input type="date" class="form-control" id="expiration" name="expiration" value="<%= food.expiration%>">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" class="form-control" id="description" name="description" value="<%= food.description%>">
        </div>
        <input type="hidden" value="<%= food.user_id%>">
        <button type="submit" class="btn btn-primary">Done</button>
      </form>
    </div>
  </section>

